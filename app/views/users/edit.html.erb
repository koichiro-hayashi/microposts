<h1>プロフィールの編集</h1>

<%= form_for(@user) do |f| %>

  <%= gravatar_for @user %>
  <%= @user.name %>
  <br>
  <br>

  名前:
  <%= f.text_field :name, class: 'form-control' %>
  
  メールアドレス:
  <%= f.text_field :email, class: 'form-control' %>
  
  新しいパスワード:
  <%= f.password_field :password, class: 'form-control' %>

  エリア:
  <%= f.text_field :area, class: 'form-control' %>
  
  <%= f.submit %>
<% end %>
  